<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EDD0A3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/detail_person_image_IV"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/detail_person_image_IV2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_person"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/detail_person_gender_TV2"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/detail_person_name_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="NAME"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@id/detail_person_image_IV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/detail_person_name_TV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="NAME"
        android:textSize="24sp"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@id/detail_person_image_IV2"
        app:layout_constraintStart_toStartOf="@id/detail_person_image_IV2"
        app:layout_constraintEnd_toEndOf="@id/detail_person_image_IV2"/>

    <TextView
        android:id="@+id/detail_person_gender_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="GENDER"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@id/detail_person_name_TV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/detail_person_gender_TV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="GENDER"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_marginTop="26dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/detail_person_image_IV2"/>

    <TextView
        android:id="@+id/detail_person_age_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="AGE"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@id/detail_person_gender_TV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/detail_person_age_TV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="AGE"
        android:textSize="18sp"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="@id/detail_person_gender_TV2"
        app:layout_constraintTop_toBottomOf="@id/detail_person_gender_TV2"/>

    <TextView
        android:id="@+id/detail_person_email_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="EMAIL"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@id/detail_person_age_TV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/detail_person_email_TV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="EMAIL"
        android:textSize="18sp"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="@id/detail_person_age_TV2"
        app:layout_constraintTop_toBottomOf="@id/detail_person_age_TV2"/>

    <TextView
        android:id="@+id/detail_person_address_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ADDRESS"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@id/detail_person_email_TV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/detail_person_address_TV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ADDRESS"
        android:textSize="16sp"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="@id/detail_person_email_TV2"
        app:layout_constraintTop_toBottomOf="@id/detail_person_email_TV2"/>

</androidx.constraintlayout.widget.ConstraintLayout>