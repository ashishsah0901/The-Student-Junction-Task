<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#EDD0A3"
    android:id="@+id/person_CL"
    android:padding="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/person_image_IV"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@drawable/ic_person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/person_name_TV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Name"
        android:textSize="16sp"
        android:paddingStart="10dp"
        android:paddingTop="8dp"
        android:paddingEnd="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/person_image_IV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/person_gender_TV"/>

    <TextView
        android:id="@+id/person_gender_TV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Male"
        android:textSize="12sp"
        android:paddingStart="10dp"
        android:textColor="#6C6A6A"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/person_name_TV"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/person_age_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="20 years old"
        android:textSize="14sp"
        android:textColor="#6C6A6A"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/person_name_TV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/person_gender_TV"/>

</androidx.constraintlayout.widget.ConstraintLayout>